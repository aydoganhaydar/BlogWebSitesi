<div class="limiter" style="margin-top:100px;">
    <div class="container-login100">
        <div class="wrap-login100 mt-2">
            <form class="login100-form validate-form" method="post">
                <center><h2 class="form-title">GİRİŞ YAP</h2></center>
                <span class="login100-form-title p-b-48">
                    <i class="zmdi zmdi-account-circle"></i>
                </span>

                <div class="form-group">
                    <input asp-for="Mail" class="form-input" type="email" placeholder="E-Mail ">
                    <span asp-validation-for="Mail" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <span class="btn-show-pass">
                        <i class="zmdi zmdi-eye"></i>
                    </span>
                    <input asp-for="Password" class="form-input" type="password" placeholder="Password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="container-login100-form-btn">
                    <div class="wrap-login100-form-btn">
                        <div class="login100-form-bgbtn"></div>
                        <input type="submit" name="signup" id="signup" class="btn form-submit">
                    </div>
                    <div class="text-center p-t-115">
                        <p>
                            <center>Kullanıcı Girişi İçin<a asp-action="Login" asp-controller="Home" asp-area="" class="loginhere-link"> Tıkla...</a></center>
                        </p>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


