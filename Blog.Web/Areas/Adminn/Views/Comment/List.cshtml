@model List<GetCommentVM>
@{
    int sira = 0;
}
<div class="col-md-12">
    <div class="card">
        <div class="card-header p-2">
            <ul class="nav nav-pills">
                <li class="nav-item"><a class="nav-link active" href="#activity" data-toggle="tab">Onay Bekleyen</a></li>
                <li class="nav-item"><a class="nav-link" href="#timeline" data-toggle="tab">Aktif</a></li>
                <li class="nav-item"><a class="nav-link" href="#settings" data-toggle="tab">Pasif</a></li>
            </ul>
        </div><!-- /.card-header -->
        <div class="card-body">
            <div class="tab-content">
                <div class="tab-pane active" id="activity">
                    <section class="content">
                        <div class="card">
                            <div class="card-body p-0">
                                <table class="table table-striped projects">
                                    <thead>
                                        <tr>

                                            <th style="width: 5%" class="text-center">
                                                Sıra No
                                            </th>
                                            <th style="width: 19%" class="text-center">
                                                AppUser FullName
                                            </th>
                                            <th style="width: 19%" class="text-center">
                                                Text
                                            </th>
                                            <th style="width: 19%" class="text-center">
                                                Article Name
                                            </th>
                                            <th style="width: 19%" class="text-center">
                                                Created Date
                                            </th>
                                            <th style="width: 19%" class="text-center">
                                                Operations
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        @foreach (var item in Model)
                                        {
                                            @if (item.Onay == Onay.UnApproved)
                                            {
                                                <tr>
                                                    <td class="text-center">
                                                        @{
                                                            sira = sira + 1;
                                                            @sira
                                                        }
                                                    </td>
                                                    <td class="text-center">
                                                        @item.AppUserFullName
                                                    </td>
                                                    <td class="text-center">
                                                        @item.Text.Substring(0,50)
                                                    </td>
                                                    <td class="project_progress text-center">
                                                        @item.ArticleTitle
                                                    </td>

                                                    <td class="project-state text-center">
                                                        <span class="badge badge-warning">@item.CreatedDate</span>
                                                    </td>
                                                    <td class="project-actions text-center">

                                                        <a asp-action="Detail" asp-controller="Comment" asp-area="Adminn" asp-route-id="@item.CommentID" class="btn btn-info">Detay</a>
                                                    </td>
                                                </tr>
                                            }

                                        }

                                    </tbody>
                                </table>
                            </div>
                            <!-- /.card-body -->
                        </div>

                    </section>
                </div>
                <!-- /.tab-pane -->
                <div class="tab-pane" id="timeline">
                    <section class="content">
                        <div class="card">
                            <div class="card-body p-0">
                                <table class="table table-striped projects">
                                    <thead>
                                        <tr>
                                            <th style="width: 5%" class="text-center">
                                                Sıra No
                                            </th>

                                            <th style="width: 20%" class="text-center">
                                                AppUser FullName
                                            </th>
                                            <th style="width: 20%" class="text-center">
                                                Text
                                            </th>
                                            <th style="width: 20%" class="text-center">
                                                Article Name
                                            </th>
                                            <th style="width: 20%" class="text-center">
                                                Created Date
                                            </th>
                                            <th style="width: 20%" class="text-center">
                                                Operations
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        @foreach (var item in Model)
                                        {
                                            @if (item.Onay == Onay.Approved && item.Statu == Statu.Active || item.Statu == Statu.Modified)
                                            {
                                                <tr>
                                                    <td class="text-center">
                                                        @{
                                                            sira = sira + 1;
                                                            @sira
                                                        }
                                                    </td>
                                                    <td class="text-center">
                                                        @item.AppUserFullName
                                                    </td>
                                                    <td class="text-center">
                                                        @item.Text.Substring(0,50)
                                                    </td>
                                                    <td class="project_progress text-center">
                                                        @item.ArticleTitle
                                                    </td>

                                                    <td class="project-state text-center">
                                                        <span class="badge badge-warning">@item.CreatedDate</span>
                                                    </td>
                                                    <td class="project-actions text-center">
                                                        <a asp-action="Detail" asp-controller="Comment" asp-area="Adminn" asp-route-id="@item.CommentID" class="btn btn-info">Detay</a>
                                                    </td>
                                                </tr>
                                            }

                                        }

                                    </tbody>
                                </table>
                            </div>
                            <!-- /.card-body -->
                        </div>

                    </section>
                </div>
                <!-- /.tab-pane -->

                <div class="tab-pane" id="settings">
                    <section class="content">

                        <div class="card">
                            <div class="card-body p-0">
                                <table class="table table-striped projects">
                                    <thead>
                                        <tr>
                                            <th style="width: 5%" class="text-center">
                                                Sıra No
                                            </th>

                                            <th style="width: 20%" class="text-center">
                                                AppUser FullName
                                            </th>
                                            <th style="width: 20%" class="text-center">
                                                Text
                                            </th>
                                            <th style="width: 20%" class="text-center">
                                                Article Name
                                            </th>
                                            <th style="width: 20%" class="text-center">
                                                Created Date
                                            </th>
                                            <th style="width: 20%" class="text-center">
                                                Operations
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            @if (item.Onay == Onay.Approved && item.Statu == Statu.Passive)
                                            {
                                                <tr>
                                                    <td class="text-center">
                                                        @{
                                                            sira = sira + 1;
                                                            @sira
                                                        }
                                                    </td>
                                                    <td class="text-center">
                                                        @item.AppUserFullName
                                                    </td>
                                                    <td class="text-center">
                                                        @item.Text.Substring(0,50)
                                                    </td>
                                                    <td class="project_progress text-center">
                                                        @item.ArticleTitle
                                                    </td>

                                                    <td class="project-state text-center">
                                                        <span class="badge badge-warning">@item.CreatedDate</span>
                                                    </td>
                                                    <td class="project-actions text-center">

                                                        <a asp-action="Detail" asp-controller="Comment" asp-area="Adminn" asp-route-id="@item.CommentID" class="btn btn-info">Detay</a>
                                                    </td>
                                                </tr>
                                            }

                                        }

                                    </tbody>
                                </table>
                            </div>
                            <!-- /.card-body -->
                        </div>

                    </section>
                </div>
                <!-- /.tab-pane -->
            </div>
            <!-- /.tab-content -->
        </div><!-- /.card-body -->
    </div>
    <!-- /.card -->
</div>


