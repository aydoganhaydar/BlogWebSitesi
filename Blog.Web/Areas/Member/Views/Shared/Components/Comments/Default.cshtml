
@model List<GetCommentsVM>


    <div class="container d-flex justify-content-center">
        <div class="row">
            <div class="col-md-12">

                <div class="card">
                    <div class="card-body">
                        <h2 class="card-title">Yorumlar</h2>
                    </div>
                @foreach (var item in Model)
                {
                    <div class="comment-widgets m-b-20">

                        <div class="d-flex flex-row comment-row">
                            <div class="p-2"><img class="img-fluid img-responsive rounded-circle mr-2" src="@item.AppUserImage" width="50" height="50"></div>
                            <div class="comment-text w-100">
                                <h6>@item.AppUserFullName</h6>
                                <div class="comment-footer">
                                    <span class="date">@item.CreatedDate</span>
                                </div>
                                <p class="m-b-5 m-t-10">@item.Text</p>
                            </div>
                        </div>
                    </div>
                }
                </div>

            </div>
        </div>
    </div>


