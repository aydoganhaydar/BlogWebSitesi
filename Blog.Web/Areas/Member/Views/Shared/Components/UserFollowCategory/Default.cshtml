@model List<Category>


<div class="sidebar-box ftco-animate fadeInUp ftco-animated">
    <h3 class="sidebar-heading">Takip Ettiğiniz Kategoriler</h3>
    <ul class="tagcloud">
        @if (Model.Count > 0)
        {
            @foreach (var item in Model)
            {
                <a asp-action="Filter" asp-controller="" asp-route-id="@item.ID">@item.Name</a>
            }
        }
        else
        {
            <h6>Şuan takip ettiğiniz kategori yoktur...</h6>
            <a asp-action="List" asp-controller="Category">Bakmak için tıklayınız...</a>
        }
    </ul>
</div>
