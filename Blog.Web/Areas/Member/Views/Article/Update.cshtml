@model ArticleUpdateVM

<link rel="stylesheet" href="~/SignUp/fonts/material-icon/css/material-design-iconic-font.min.css">

<!-- Main css -->
<link rel="stylesheet" href="~/css/Create.css">

@section UserInfo
    {
    @await Component.InvokeAsync("AppUsers", new  {id=Model.AppUserID})
 }

<div class="main" style="margin-top:20px; margin-bottom:50px;">
    <section class="signup ">
        <div class="container col-md-12" style="border-style:double">
            <div class="signup-content">
                <div class="signup-form">
                    <center><h2 class="form-title">MAKALE GÜNCELLE </h2></center>
                    <form asp-action="Update" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <input asp-for="ID" type="hidden" />
                            <input asp-for="AppUserID" type="hidden" />
                            <input asp-for="Image" type="hidden" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Title"> Başlık </label>
                            <input asp-for="Title" type="text" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger">
                            </span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Content"> İçerik </label>
                            <textarea asp-for="Content" type="" class="form-control" rows="20" cols="60"></textarea>
                            <span asp-validation-for="Content" class="text-danger">
                            </span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ImagePath"> Resim </label>
                            <input asp-for="ImagePath" type="file" class="form-control" />
                            <span asp-validation-for="ImagePath" class="text-danger">
                            </span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CategoryId"> Kategori </label>
                            <select asp-for="CategoryId" type="text" class="form-control">
                                @foreach (var item in Model.Categories)
                                {
                                    <option value="@item.ID">@item.Name</option>
                                }
                            </select>
                            <span asp-validation-for="CategoryId" class="text-danger">
                            </span>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn form-submit">Güncelle</button>
                        </div>
                    </form>
                </div>

            </div>
        </div>
    </section>
</div>

<script src="~/SignInandSignUp/vendor/jquery/jquery.min.js"></script>
<script src="~/SignInandSignUp/js/main.js"></script>

