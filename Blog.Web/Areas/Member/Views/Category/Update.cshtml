<div class="main" style="margin-top:20px; margin-bottom:50px;">
    <section class="signup">
        <div class="container" style="border-style:double">
            <div class="signup-content">
                <div class="signup-form">
                    <center><h2 class="form-title">KATEGORİ GÜNCELLE</h2></center>
                    <form asp-action="Update" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label asp-for="Name"></label>
                            <input asp-for="Name" class="form-control" type="text" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Desription"></label>
                            <input asp-for="Desription" class="form-control" type="text" />
                            <span asp-validation-for="Desription" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ImagePath"> Resim </label>
                            <input asp-for="ImagePath" type="file" class="form-control" />
                            <span asp-validation-for="ImagePath" class="text-danger">
                            </span>
                        </div>
                        <div>
                            <input type="hidden" asp-for="ID" />
                            <input asp-for="Image" type="hidden" />
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn form-submit">GÜNCELLE</button>
                        </div>

                    </form>
                </div>

            </div>
        </div>
    </section>
</div>

<script src="~/SignInandSignUp/vendor/jquery/jquery.min.js"></script>
<script src="~/SignInandSignUp/js/main.js"></script>
